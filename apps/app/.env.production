# ======================
# ENVIRONMENT
# ======================
EXPO_PUBLIC_ENVIRONMENT=production

# ======================
# API CONFIGURATION
# ======================
EXPO_PUBLIC_API_URL=https://api.forest-focus.com/api
EXPO_PUBLIC_API_TIMEOUT=10000

# ======================
# APP CONFIGURATION
# ======================
EXPO_PUBLIC_APP_NAME=Forest Focus
EXPO_PUBLIC_APP_VERSION=1.0.0

# ======================
# OBSERVABILITY
# ======================
# Sentry DSN (production)
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/production

# PostHog (production)
EXPO_PUBLIC_POSTHOG_API_KEY=your-production-posthog-key
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ======================
# FEATURE FLAGS
# ======================
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true

# ======================
# EAS BUILD
# ======================
EXPO_PUBLIC_EAS_PROJECT_ID=
